<% if notice %>
<div style="color:#ffffff;" id="notice" class="alert alert-dismissible alert-success">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <strong>Well done!</strong> <%= notice %>
</div>
<% end %>

<div style="display:flex;padding:25px;">
   <div style="padding:15px;">
    <p style="font-size:10rem;line-height:11rem;">
      <%= @town.nom %> 
      
    </p>
  </div>
  <div style="padding:15px;">
     <p style="font-size:5rem;line-height:5.5rem;">
      <% if @weatherTemperature %>
        <%= '%.2f' % @weatherTemperature %> &deg;C
      <% else %>
        Unavailable
      <% end %>
    </p>
    <p style="font-size:5rem;">
      <% if @weatherIconName %>
        <i class="wi wi-forecast-io-<%= @weatherIconName %>"></i>
      <% end %>
    </p>
  </div>
 
</div>

<%= link_to 'Edit', edit_town_path(@town) %> |
<%= link_to 'Back', towns_path %>
